<main class="main">
  <div class="inner">
  <div class='search-bar-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='navi'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', 'categories/show', class: "category-list" %></li>
    </ul>
    <%# ログインしているときは以下を表示 %>
    <% if user_signed_in?%>
       <div class="greeting"> 
         <%= "Hello! " %>
         <%= link_to "#{current_user.nickname}", root_path, class: :greeting__link%>
       </div>
       <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="item__wrapper">
  </div>
</main>
